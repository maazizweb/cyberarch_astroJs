    <script src="/assets/js/jquery.counterup.min.js" is:inline></script>
    <script src="/assets/js/jquery.magnific-popup.min.js" is:inline></script>
    <script src="/assets/js/jquery.mb.YTPlayer.min.js" is:inline></script>
    <script src="/assets/js/jquery.slicknav.js" is:inline></script>
    <script src="/assets/js/jquery.waypoints.min.js" is:inline></script>
    <script src="/assets/js/magiccursor.js" is:inline></script>
    <script src="/assets/js/parallaxie.js" is:inline></script>
    <script src="/assets/js/swiper-bundle.min.js" is:inline></script>
    <script src="/assets/js/validator.min.js" is:inline></script>
    <script src="/assets/js/function.js" is:inline></script>
  </body>
</html>
